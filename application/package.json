{
  "name": "@the-homeless-god/node-nest",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/the-homeless-god/node-nest",
  "author": "Marat Zimnurov <zimtir@mail.ru>",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@jest/globals": "^29.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/github": "^9.2.1",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "commitlint": "^17.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^7.4.1",
    "npm-check-updates": "^16.14.6",
    "nyc": "^15.1.0",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "commitlint": "commitlint --edit",
    "format": "npm run format:prettier && npm run lint:eslint",
    "format:fix": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint ./packages/*/src --fix --ext .js,.jsx,.ts,.tsx -c .eslintrc",
    "format:prettier": "prettier --write './packages/**/src/**/*' && prettier --write './packages/**/lib/**/*.ts'",
    "format:root:prettier": "prettier --write .",
    "lint:staged": "lint-staged",
    "lint:eslint": "eslint ./packages/*/src --ext .js,.ts -c .eslintrc",
    "prepare": "cd .. && husky install ./application/.husky",
    "start:nest:dev": "lerna run --scope @the-homeless-god/node-nest-nest start:dev --stream",
    "start:node:dev": "lerna run --scope @the-homeless-god/node-nest-node start:dev --stream",
    "dev": "pm2 start pm2.dev.config.json",
    "logs": "pm2 logs",
    "list": "pm2 list",
    "stop": "pm2 stop",
    "drop": "pm2 delete",
    "start": "pm2 start pm2.dev.config.json",
    "test": "lerna run test --concurrency 1 --stream --no-prefix && echo",
    "build": "lerna run build --concurrency 1 --stream --no-prefix && echo",
    "test:coverage": "lerna run test:coverage --stream",
    "update:install": "npm update --save && npm install",
    "update:pull": "npm outdated",
    "update:save": "ncu -u && npm i",
    "version:bump": "lerna version"
  },
  "dependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.6"
  },
  "engines": {
    "node": ">=v20.11.0"
  }
}
